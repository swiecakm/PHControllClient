<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.phcontrollclient.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_ip_label" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none|textMultiLine"
        android:selectAllOnFocus="false"
        android:text="@string/app_name" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="18dp"
        android:onClick="onConnectButtonClick"
        android:text="Connect" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="50dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3" >

        <GridLayout
            android:layout_column="2"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:columnCount="2" >

            <Button
                android:id="@+id/button2"
                android:layout_gravity="left"
                android:text="-" 
                android:onClick="onVolDownButtonClick" />
            

            <Button
                android:id="@+id/button3"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:text="+" 
				android:onClick="onVolUpButtonClick" />

        </GridLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:gravity="right"
            android:text="Volume"
            android:textSize="@dimen/BiggerText2"
            android:textStyle="bold" />

    </GridLayout>

</RelativeLayout>
